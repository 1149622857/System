<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B20E4FD"
    tools:context=".ui.home.HomeFragment">


    <TextView
        android:id="@+id/blank"
        android:layout_width="350dp"
        android:layout_height="138dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/round_frame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Ip"
        android:layout_width="140dp"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/sharp_frame"
        android:gravity="center"
        android:inputType="text"
        android:text="10.10.100.254"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toEndOf="@+id/textIP" />

    <TextView
        android:id="@+id/textIP"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="72dp"
        android:gravity="center"
        android:text="IP地址:"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toStartOf="@+id/blank" />

    <EditText
        android:id="@+id/port"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/sharp_frame"
        android:gravity="center"
        android:inputType="number"
        android:text="8899"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toEndOf="@+id/Ip" />

    <TextView
        android:id="@+id/blank3"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="21dp"
        android:background="@drawable/round_frame"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/blank2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blank" />

    <TextView
        android:id="@+id/blank2"
        android:layout_width="350dp"
        android:layout_height="225dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/round_frame"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />


    <Button
        android:id="@+id/Switch"
        android:layout_width="88dp"
        android:layout_height="43dp"
        android:layout_marginEnd="88dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/round_frame"
        android:backgroundTint="#02B0FF"
        android:text="打开"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintEnd_toEndOf="@+id/blank" />

    <TextView
        android:id="@+id/textRunning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="运行状态"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/showPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="28dp"
        android:text="这里显示功率"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/blank2"
        app:layout_constraintTop_toBottomOf="@+id/showTemp" />

    <TextView
        android:id="@+id/textTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="72dp"
        android:text="温度（°C）:"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/blank2"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/showTemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="28dp"
        android:text="这里显示温度"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/blank2"
        app:layout_constraintTop_toTopOf="@+id/blank2" />

    <TextView
        android:id="@+id/textPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        android:text="功率（%）:"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/blank2"
        app:layout_constraintTop_toBottomOf="@+id/textTemp" />

    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        android:text="报 警"
        android:textAppearance="@android:style/TextAppearance.Material.Body1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/blank2"
        app:layout_constraintStart_toStartOf="@+id/blank2"
        app:layout_constraintTop_toBottomOf="@+id/textPower"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="27dp"
        android:src="@drawable/green_circle"
        app:layout_constraintStart_toEndOf="@+id/alarm"
        app:layout_constraintTop_toBottomOf="@+id/showPower" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="38dp"
        android:layout_height="39dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/gray_circle"
        app:layout_constraintBottom_toBottomOf="@+id/blank"
        app:layout_constraintStart_toEndOf="@+id/Switch" />


</androidx.constraintlayout.widget.ConstraintLayout>


